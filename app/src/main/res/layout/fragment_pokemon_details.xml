<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    tools:context=".PokemonDetails">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:background="@color/cardview_dark_background"
       android:layout_height="match_parent">

       <android.support.v7.widget.CardView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="50dp"
           app:elevation="0dp"
           app1:cardCornerRadius="8dp"
           android:id="@+id/cardviewe"
           app1:cardBackgroundColor="#fff"
           android:layout_marginRight="16dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center_horizontal"
               android:padding="16dp"
               android:layout_marginTop="80dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/name"
                   android:text="pokemon"
                   android:textSize="30sp"
                   android:textStyle="bold"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/height"
                   android:text="height"
                   android:textSize="16sp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/weight"
                   android:text="weight"
                   android:textSize="16sp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Type"
                   android:textSize="16sp"
                   />

               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:id="@+id/recycler_type">
               </android.support.v7.widget.RecyclerView>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Weak"
                   android:textSize="16sp"
                   />

               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:id="@+id/recycler_weakness">
               </android.support.v7.widget.RecyclerView>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Pre Evolution"
                   android:textSize="16sp"
                   />

               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:id="@+id/recycler_preEvolution"
                >
               </android.support.v7.widget.RecyclerView>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Next Evolution"
                   android:textSize="16sp"
                   />

               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:id="@+id/recycler_nextEvolution"
                  >
               </android.support.v7.widget.RecyclerView>
           </LinearLayout>

       </android.support.v7.widget.CardView>

       <ImageView
           android:id="@+id/image_pokemon"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_gravity="center_horizontal"
           android:layout_alignTop="@+id/cardviewe"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="-50dp"
           android:elevation="8dp"
           android:src="@drawable/ic_launcher_background" />

   </RelativeLayout>
</RelativeLayout>